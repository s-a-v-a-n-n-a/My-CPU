struct Assembling_mark
{
    int        num;
    long long  where;
    char      *mark_name;
};

typedef struct Assembling_mark Marker;

struct All_marks
{
    Marker*   marks;
    long long amount;
};
typedef struct All_marks Marks;

struct Current_command
{
    char*     command;
    char*     reg;
    char      code;
    char      mode;
    int       args;
    long long directory;
    double    ram_address;
    double    value;
    int       flag;
    char*     marker;
};
typedef struct Current_command Command;

struct Assembl_stat
{
    FILE*     out;
    FILE*     list_file;
    char*     input;
    char*     input_cpy;
    size_t    n_lines;
    long long address;
    Marks*    marks;
};
typedef struct Assembl_stat Stat;


int        read_string         (char **str, char *res, int flag);

double     check_reg           (char *reg);

void       list_header         (FILE *list_file);

void       listing             (FILE *list_file, long long address, Command *cmd);

void       writing_and_listing (Stat *asb, Command *cmd);

assembl_er read_value          (char **str, double *value, int code_call);

assembl_er check_mark          (char *str, long long *add, Marks *marks);

assembl_er read_val_for_push   (Stat *asb, int mode_push, int just_check);

assembl_er read_mark           (Stat *asb, Command *cmd, int just_check);

assembl_er check_trash         (char **str);

assembl_er translate_arg       (Stat *asb, Command *cmd, int just_check);

assembl_er find_marks          (Stat* asb);

assembl_er mark_construct      (char *command, int len, long int amount, long long address, Marks *marks);

assembl_er parse_marks         (Stat *asb);

assembl_er assembling          (Stat *asb);

assembl_er stat_construct      (Stat** asb, const char* file_name);

void       stat_destruct       (Stat** asb);

assembl_er processing          (const char *file_name);
